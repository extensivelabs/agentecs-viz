# direnv configuration for agentecs-viz
# Automatically loads when entering this directory (if direnv is installed)
# See: https://direnv.net/

# Activate Python virtual environment
if [ -d .venv ]; then
    source .venv/bin/activate
    export VIRTUAL_ENV="$(pwd)/.venv"
    PATH_add .venv/bin

    # Add src to PYTHONPATH for easier imports
    PATH_add src
    export PYTHONPATH="$(pwd)/src:${PYTHONPATH:-}"
fi

# Load environment variables from .env if it exists
if [ -f .env ]; then
    dotenv .env
fi

# Helpful message
echo "agentecs-viz environment loaded"
if [ -d .venv ]; then
    echo "  Virtual environment: .venv"
fi
if [ -f .env ]; then
    echo "  Environment file: .env"
fi
